<div class="nested-fields">

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :description, "Description", class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= f.text_area :description, :class => "form-control", placeholder: "Your item description", rows: 3 %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :unitPrice, "Unit Price", class: "col-md-3 col-md-offset-3 control-label" %>
            <div class="col-md-6">
              <div class="input-group">
                <span class="input-group-addon">$</span>
                <%= f.text_field :unitPrice, :class => "form-control unitPrice", placeholder: "1500" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :quantity, "Quantity", class: "col-md-3 control-label" %>
            <div class="col-md-5">
              <%= f.number_field :quantity, :class => "form-control quantity", min: 1 %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :totalPrice, "Price", class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <div class="input-group">
            <span class="input-group-addon">$</span>
            <%= f.text_field :totalPrice, :class => "form-control totalPrice", "readonly" => "readonly" %>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="form-group">
        <div class="col-md-7 col-md-offset-3">
          <%= link_to_remove_association 'remove', f, class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>

</div>




<script type="text/javascript">
$(document).ready(function() {

  $('#items').on('cocoon:after-insert', function() {

    $('.quantity').each(function(e) {
      dep = $( this ).addClass( 'quantity_' + e );
      classNameQ = $(dep).attr('class');
    });
    $('.unitPrice').each(function(e) {
      minpre = $( this ).addClass( 'unitPrice_' + e );
      classNameUp = $(minpre).attr('class');
    });
    $('.totalPrice').each(function(e) {
      topri = $( this ).addClass( 'totalPrice_' + e );
      classNameTp = $(topri).attr('class');
    });

    $('input').change(function(e)  {
      dep1 = parseFloat($( dep ).val());
      minpre1 = parseFloat($( minpre ).val());

      var total_mnozi = 0;
      total_mnozi = dep1 * minpre1;
      parseFloat($( topri ).val(total_mnozi));

    });
  });
 });
</script>
