<% if @client.errors.any? %>
<div class="alert alert-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <strong><%= pluralize(@client.errors.count, "error") %> prohibited
    this user from being saved:</strong>
    <ul>
      <% @client.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :contactPerson, "Contact Person", class: "col-md-3 control-label" %>
  <div class="col-md-7">
    <%= f.text_field :contactPerson, :class => "form-control", placeholder: "John Doe" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :companyName, "Company Name", class: "col-md-3 control-label" %>
  <div class="col-md-7">
    <%= f.text_field :companyName, :class => "form-control", placeholder: "Google Inc." %>
  </div>
</div>

<div class="form-group">
  <%= f.label :companyAddress, "Company Address", class: "col-md-3 control-label" %>
  <div class="col-md-7">
    <%= f.text_area :companyAddress, :class => "form-control", rows: 3 %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, "Email", class: "col-md-3 control-label" %>
  <div class="col-md-7">
    <%= f.email_field :email, :class => "form-control", placeholder: "john@company.com" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :phone, "Phone", class: "col-md-3 control-label" %>
  <div class="col-md-7">
    <%= f.text_field :phone, :class => "form-control", placeholder: "+60355731800" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-3 control-label"></label>
  <div class="col-md-7">
    <%= f.button "Save", :class => "btn btn-primary", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..." } %>
    <%= link_to 'Cancel', clients_path, :class => "btn btn-link" %>
  </div>
</div>
